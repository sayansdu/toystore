<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
      <servlet-name>Login</servlet-name>
      <servlet-class>controller.Login</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
  <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>controller.Registration</servlet-class>
  </servlet>    

  <servlet>
      <servlet-name>AllGoods</servlet-name>
      <servlet-class>controller.admin.good.select.All</servlet-class>
  </servlet>

  <servlet>
      <servlet-name>add_good</servlet-name>
      <servlet-class>controller.admin.good.Add</servlet-class>
  </servlet>
    <servlet-mapping>
        <servlet-name>add_good</servlet-name>
        <url-pattern>/admin/good/add</url-pattern>
    </servlet-mapping>

  <servlet>
      <servlet-name>Remove_good</servlet-name>
      <servlet-class>controller.admin.good.Delete</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>Update_good</servlet-name>
      <servlet-class>controller.admin.good.update.Update</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>Save_updated_good</servlet-name>
      <servlet-class>controller.admin.good.update.Save</servlet-class>
  </servlet>
  
  <servlet>
      <servlet-name>All_Goods_For_User</servlet-name>
      <servlet-class>controller.user.All_Goods</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>Good_User</servlet-name>
        <servlet-class>controller.user.Good</servlet-class>
    </servlet>


    <servlet-mapping>
      <servlet-name>Login</servlet-name>
      <url-pattern>/Login</url-pattern>
  </servlet-mapping>
    
  <servlet-mapping>
      <servlet-name>Registration</servlet-name>
      <url-pattern>/Registration</url-pattern>
  </servlet-mapping>  
    
  <servlet-mapping>
      <servlet-name>Logout</servlet-name>
      <url-pattern>/Logout</url-pattern>
  </servlet-mapping>  
    
  <servlet-mapping>
      <servlet-name>AllGoods</servlet-name>
      <url-pattern>/admin/goods/all</url-pattern>
  </servlet-mapping>  

    <servlet-mapping>
      <servlet-name>Remove_good</servlet-name>
      <url-pattern>/admin/good/delete</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
      <servlet-name>Update_good</servlet-name>
      <url-pattern>/admin/good/update/get</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>Save_updated_good</servlet-name>
      <url-pattern>/admin/good/update/save</url-pattern>
  </servlet-mapping>  
    
  <servlet-mapping>
      <servlet-name>All_Goods_For_User</servlet-name>
      <url-pattern>/buyer</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Good_User</servlet-name>
        <url-pattern>/buyer/good</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>controller.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetGood</servlet-name>
        <servlet-class>controller.admin.good.select.One</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetGood</servlet-name>
        <url-pattern>/good/get</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetGoodBefore</servlet-name>
        <servlet-class>controller.order.before.Get</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetGoodBefore</servlet-name>
        <url-pattern>/order/before/get</url-pattern>
    </servlet-mapping>
</web-app>
